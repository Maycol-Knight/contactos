<div class="relative">
    <input 
        type="search" 
        id="barra-busqueda" 
        placeholder="Buscar contactos" 
        class="w-full bg-gray-800 text-white placeholder-gray-400 rounded-full py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-500"></i>
</div>

<script is:inline>
    const barraBusqueda = document.getElementById('barra-busqueda');

    barraBusqueda.addEventListener('input', (evento) => {
        const terminoBusqueda = evento.target.value;
        const eventoFiltrar = new CustomEvent('filtrar-contactos', {
            detail: { termino: terminoBusqueda }
        });
        document.dispatchEvent(eventoFiltrar);
    });
</script>